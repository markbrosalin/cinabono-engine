{
    "extends": "@cnbn/typescript-config/base.json",
    "exclude": ["node_modules", "dist"],
    "include": ["src", "__tests__"],
    "types": ["reflect-metadata"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2022",
        "lib": ["ES2022"],
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@engine/*": ["./src/*"]
        }
    }
}

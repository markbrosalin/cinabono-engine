{
    "extends": "./base.json",
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "bundler",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["esnext", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "exclude": ["node_modules"]
}

{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "prod": {
            "cache": false,
            "persistent": true
        },
        "lint": { "inputs": ["**/*.ts", "**/*.tsx", "eslint.config.*", "package.json"] },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "cache": false
        }
    }
}
